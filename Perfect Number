#include <stdio.h>

int main() {
    int num=0;
    int a=0;
    printf("Enter the number- ");
    scanf("%d",&num);
    for(int i=1;i<num;i++)
    {
        if(num%i==0)
        {
            a=a+i;
        }
    }
    if(a==num)
    {
        printf("This number is a perfect number\n");
    }
    else
    {
        printf("This number is not a perfect number\n");
    }
    printf("the value of a is %d",a);
    return 0;
    

}



